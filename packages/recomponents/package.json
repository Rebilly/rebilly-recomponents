{
  "name": "@rebilly/recomponents",
  "version": "0.0.1",
  "description": "Official Rebilly front-end components library",
  "main": "dist/recomponents.common.js",
  "unpkg": "dist/recomponents.umd.js",
  "author": "Rebilly SRL",
  "license": "MIT",
  "scripts": {
    "test": "vue-cli-service test:unit",
    "lint": "npm run lint:js & npm run lint:styles",
    "lint:js": "vue-cli-service lint",
    "lint:styles": "stylelint **/*.scss",
    "build": "npm run build:wc & npm run build:lib",
    "build:wc": "vue-cli-service build --target wc-async --name recomponents 'src/components/**/*.vue'",
    "build:lib": "vue-cli-service build --target lib --name recomponents 'src/index.js'",
    "storybook": "start-storybook -p 9001  -s public",
    "build-storybook": "build-storybook -c .storybook -o ../../docs",
    "semantic-release": "semantic-release"
  },
  "files": [
    "package.json",
    "dist/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Rebilly/rebilly-recomponents.git"
  },
  "keywords": [
    "Rebilly",
    "Vue"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">= 10",
    "yarn": ">= 1.12.0"
  },
  "dependencies": {
    "lodash.clonedeep": "^4.5.0",
    "moment": "^2.22.2",
    "moment-timezone": "^0.5.23",
    "shortid": "^2.2.14",
    "v-calendar": "^0.9.7"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@semantic-release/changelog": "^3.0.4",
    "@semantic-release/commit-analyzer": "^6.3.0",
    "@semantic-release/git": "^7.0.16",
    "@semantic-release/github": "^5.4.2",
    "@semantic-release/npm": "^5.1.13",
    "@semantic-release/release-notes-generator": "^7.3.0",
    "@storybook/addon-a11y": "^5.1.10",
    "@storybook/addon-actions": "^5.1.10",
    "@storybook/addon-contexts": "^5.1.10",
    "@storybook/addon-cssresources": "^5.1.10",
    "@storybook/addon-knobs": "^5.1.10",
    "@storybook/addon-notes": "^5.1.10",
    "@storybook/addon-storysource": "^5.1.10",
    "@storybook/vue": "^5.1.10",
    "@vue/babel-preset-app": "^3.10.0",
    "@vue/cli": "^3.11.0",
    "@vue/cli-plugin-babel": "^3.10.0",
    "@vue/cli-plugin-eslint": "^3.10.0",
    "@vue/cli-plugin-unit-jest": "^3.10.0",
    "@vue/cli-service": "^3.10.0",
    "@vue/eslint-config-airbnb": "^4.0.0",
    "@vue/server-test-utils": "^1.0.0-beta.29",
    "@vue/test-utils": "^1.0.0-beta.29",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-vue": "^2.0.2",
    "babel7-jest": "^1.0.1",
    "core-js": "^2.6.5",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.0.0",
    "jest": "^24.8.0",
    "jest-cli": "^24.8.0",
    "jest-css-modules": "^2.1.0",
    "jest-serializer-html": "^7.0.0",
    "jest-serializer-vue": "^2.0.2",
    "node-sass": "^4.12.0",
    "sass-loader": "^7.2.0",
    "semantic-release": "^15.13.21",
    "storybook-vue-router": "^1.0.3",
    "stylelint": "^10.1.0",
    "vue": "^2.6.10",
    "vue-i18n": "^8.12.0",
    "vue-jest": "^3.0.4",
    "vue-loader": "^15.7.1",
    "vue-no-ssr": "^1.1.1",
    "vue-router": "^3.1.2",
    "vue-server-renderer": "^2.6.10",
    "vue-template-compiler": "^2.6.10"
  },
  "peerDependencies": {
    "vue": "^2.6.0"
  }
}
